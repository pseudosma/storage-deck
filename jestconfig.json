{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{ts,js,tsx,jsx}",
      "!**/__tests__/**",
      "!index.ts"
    ],
    "testRegex": "(/__tests__/.*\\.)(test\\.ts)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }